<!DOCTYPE html>
<html>

<head>
    <title>StudyMate | Find A Study Partner</title>
    <!-- Favicon -->
    <link rel="icon" href="assets/images/favicon.ico">
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%- include('usercommonCSSJS') -%>
</head>

<body>
    <div class="container-fluid">
        <%- include('userheader') -%>
            <section class="mt-55" id="studentprofile">
                <!-- <div class="container-fluid"> -->
                <hr class="featurette-divider">
                <div class="row featurette">
                    <%- include('profilesidepanel') -%>
                        <div class="col-md-9" id="mainpanel">
                            <div class="card shadow-2-strong editbasicinfo" style="border-radius: 1rem;">
                                <div class="card-body p-5 text-center">
                                    <h2 class="featurette-heading">Hello <span class="text-muted">
                                            <%= name %>
                                        </span>,</h2>
                                    <% if(status=="failure" ) { %>
                                    <div class="form-outline mb-4">
                                        <span class="errorMsg">
                                            <%= message %>
                                        </span>
                                    </div>
                                    <% } else { %>
                                    <div class="row">
                                        <div class="col-md-7">
                                            <div class="form-outline mt-4 mb-4">
                                                <input type="email" id="useremail"
                                                    class="form-control form-control-sm"
                                                    placeholder="(Required) Enter Email Id..." maxlength="100"
                                                    value="<%= email %>" disabled />
                                            </div>

                                            <div class="form-outline mb-4">
                                                <input type="text" id="name"
                                                    class="form-control form-control-sm"
                                                    placeholder="(Required) Enter Name..." maxlength="50"
                                                    value="<%= name %>" />
                                            </div>

                                            <div class="form-outline mb-4">
                                                <input type="number" id="contact"
                                                    class="form-control form-control-sm"
                                                    placeholder="(Required) Enter Contact No: xxxxxxxxxx"
                                                    value="<%= phone %>" />
                                            </div>
                                            <div class="form-outline mb-4 genderblock">
                                                <div class="form-check form-check-inline">
                                                    <label class="form-check-label">Gender: </label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio"
                                                        name="genderoption" id="inlineRadio1" value="Male" <%
                                                        if(gender=="Male" ) { %> checked <% } %>>
                                                        <label class="form-check-label"
                                                            for="inlineRadio1">Male</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio"
                                                        name="genderoption" id="inlineRadio2" value="Female" <%
                                                        if(gender=="Female" ) { %> checked <% } %>>
                                                        <label class="form-check-label"
                                                            for="inlineRadio2">Female</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio"
                                                        name="genderoption" id="inlineRadio3" value="Other" <%
                                                        if(gender=="Other" ) { %> checked <% } %>>
                                                        <label class="form-check-label"
                                                            for="inlineRadio3">Other</label>
                                                </div>
                                            </div>

                                            <div class="form-outline mb-4">
                                                <input type="text" id="address"
                                                    class="form-control form-control-sm"
                                                    placeholder="(Required) Enter Address..."
                                                    value="<%= address %>" />
                                            </div>

                                            <div class="form-outline mb-4">
                                                <input type="number" id="zipcode"
                                                    class="form-control form-control-sm"
                                                    placeholder="(Required) Enter Zipcode..."
                                                    value="<%= zipcode %>" />
                                            </div>

                                            <div class="form-outline mb-4" id="basicinfodiv">
                                                <span class="successMsg"></span>
                                                <span class="errorMsg"></span>
                                            </div>

                                            <div class="form-outline mb-4">
                                                <button class="btn btn-danger btn-sm btn-block" type="submit"
                                                    id="savebasicinfo">Save Changes</button>
                                            </div>
                                        </div>

                                        <div class="col-md-1" style="border-left: 1px dotted #919da9;"></div>
                                        <div class="col-md-3">
                                            <form id="profilepicture" enctype='multipart/form-data'>
                                                <div class="col-md-12 form-outline mb-4">
                                                    <img src="../assets/images/userProfile/<%= user_id %>.jpg"
                                                        class="img-thumbnail" alt="profile picture">
                                                </div>
                                                <div class="form-outline mb-4">
                                                    <input name="picture" id="picture" type="file"
                                                        class="form-control"
                                                        placeholder="Change Profile picture">
                                                </div>
                                                <div class="form-outline mb-4" id="pictureupdate">
                                                    <span class="successMsg"></span>
                                                    <span class="errorMsg"></span>
                                                </div>

                                                <div class="form-outline mb-4">
                                                    <button class="btn btn-danger btn-sm btn-block"
                                                        id="updatepicture">Update Picture</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                </div>
            </section>
    </div>
    <%- include('userfooter') -%>
</body>

</html>